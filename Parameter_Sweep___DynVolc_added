            #plt.plot(t_list[20:], curr_T_list[20:], 'y--', label='tafel')
            plt.title("Current vs Time\n" + loop_id_full)
            plt.yscale('symlog', linthresh=1e-3)
            plt.xlabel('t');   plt.ylabel('I (mA, not A)')
            plt.grid();   plt.legend()
