            plt.close()
        
        # current vs t (current on y) (positive and negative current values)
        if show_ycurrent_vs_t_full_plots == 1   or   save_ycurrent_vs_t_full_plots == 1:
            #plt.plot(t_list[20:], curr_list[20:], 'black', label='net')
